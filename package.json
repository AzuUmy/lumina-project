{
  "name": "lumina-project",
  "private": true,
  "workspaces": [
    "Apps/*",
    "Packages/*"
  ],
  "scripts": {
    "dev:Shared": "pnpm --filter @lumina/shared dev",
    "dev:Frontend": "pnpm --filter @lumina/web dev",
    "dev:Backend": "pnpm --filter @lumina/backend start:dev",
    "dev": "concurrently -n \"shared,Front,Back\" -c \"yellow,cyan,green\" \"pnpm dev:Shared\" \"pnpm dev:Frontend\" \"pnpm dev:Backend\"",
    "build": "pnpm -r --parallel build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "ts-node": "^10.9.2", 
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}